<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.skyaccessteam.homeapp4.LandingPage">

    <RelativeLayout
        android:layout_width="330dp"
        android:layout_height="323dp"
        tools:layout_editor_absoluteY="0dp"
        tools:layout_editor_absoluteX="20dp">

        <TextView
            android:id="@+id/description1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_subtitle"

            tools:text="Connection details of my hub"
            android:layout_above="@+id/mobileButton"
            android:layout_alignParentStart="true" />


        <Button
            android:id="@+id/hubButton"
            android:layout_width="344dp"
            android:layout_height="105dp"
            android:layout_alignParentTop="true"
            android:layout_marginTop="85dp"
            android:background="@color/white"
            android:text="My Hub "
            android:textAlignment="viewStart"
            android:textColor="@color/color_subtitle"
            android:textSize="18dp"
            tools:layout_editor_absoluteX="8dp"
            tools:layout_editor_absoluteY="203dp" />

        <Button
            android:id="@+id/mobileButton"
            android:layout_width="383dp"
            android:layout_height="105dp"
            android:background="@color/white"

            android:textAlignment="viewStart"
            android:textColor="@color/color_subtitle"
            android:textSize="18dp"
            android:text="Handset Details"
            tools:layout_editor_absoluteX="-8dp"
            tools:layout_editor_absoluteY="90dp"
            android:layout_below="@+id/hubButton"
            android:layout_alignParentStart="true"
            android:layout_marginTop="27dp" />



    </RelativeLayout>


</android.support.constraint.ConstraintLayout>
